<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/colorWhite">

  <com.apps.twelve.floor.authorization.base.NoChangeBackgroundTextInputLayout
    android:id="@+id/til_verify_code"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="30dp"
    app:errorEnabled="true"
    app:hintEnabled="false">

    <EditText
      android:id="@+id/et_verify_code"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:background="@color/colorInputField"
      android:gravity="center_horizontal|center_vertical"
      android:hint="@string/dialog_verify_code"
      android:textSize="14sp" />
  </com.apps.twelve.floor.authorization.base.NoChangeBackgroundTextInputLayout>


  <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
    android:id="@+id/btn_verify_code"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/til_verify_code"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="30dp"
    android:background="?colorAccent"
    android:text="@string/verify_btn"
    android:textColor="@color/colorWhite"
    android:textSize="16sp"
    android:layout_centerHorizontal="true"
    app:finalCornerAngle="50dp"
    app:initialCornerAngle="0dp"
    app:spinning_bar_color="@color/colorWhite"
    app:spinning_bar_padding="10dp"
    app:spinning_bar_width="2dp" />

</RelativeLayout>