<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <android.support.constraint.ConstraintLayout
      android:id="@+id/root_layout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/colorWhite"
      android:paddingBottom="30dp"
      >

    <android.support.constraint.Guideline
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"
        />

    <android.support.constraint.Guideline
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="50dp"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/registration_your_name"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/line"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_name_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registration_your_name_description"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/line"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorInputField"
        android:gravity="center_horizontal|center_vertical"
        android:hint="Имя"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textSize="14sp"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintLeft_toLeftOf="@+id/line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_description"
        app:layout_constraintWidth_default="spread"
        />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/registration_phone_number"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/line"
        app:layout_constraintTop_toBottomOf="@id/et_name"
        />

    <TextView
        android:id="@+id/tv_phone_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registration_phone_number_description"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/line"
        app:layout_constraintTop_toBottomOf="@+id/tv_phone"
        />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorInputField"
        android:gravity="center_horizontal|center_vertical"
        android:hint="@string/registration_phone_number_hint"
        android:inputType="phone"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textSize="14sp"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintLeft_toLeftOf="@+id/line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_phone_description"
        app:layout_constraintWidth_default="spread"
        />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/registration_email"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/line"
        app:layout_constraintTop_toBottomOf="@id/et_phone"
        />

    <TextView
        android:id="@+id/tv_email_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registration_required_field"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/line"
        app:layout_constraintTop_toBottomOf="@+id/tv_email"
        />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorInputField"
        android:gravity="center_horizontal|center_vertical"
        android:hint="Email"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textSize="14sp"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintLeft_toLeftOf="@+id/line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_email_description"
        app:layout_constraintWidth_default="spread"
        />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Пароль"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/line"
        app:layout_constraintTop_toBottomOf="@id/et_email"
        />

    <TextView
        android:id="@+id/tv_password_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registration_required_field"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/line"
        app:layout_constraintTop_toBottomOf="@+id/tv_password"
        />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorInputField"
        android:gravity="center_horizontal|center_vertical"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textSize="14sp"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintLeft_toLeftOf="@+id/line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_password_description"
        app:layout_constraintWidth_default="spread"
        />


    <TextView
        android:id="@+id/tv_confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Пароль для подтверждения"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/line"
        app:layout_constraintTop_toBottomOf="@id/et_password"
        />

    <TextView
        android:id="@+id/tv_confirm_password_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registration_required_field"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/line"
        app:layout_constraintTop_toBottomOf="@+id/tv_confirm_password"
        />

    <EditText
        android:id="@+id/et_confirm_password"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorInputField"
        android:gravity="center_horizontal|center_vertical"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textSize="14sp"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintLeft_toLeftOf="@+id/line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_confirm_password_description"
        app:layout_constraintWidth_default="spread"
        />


    <RelativeLayout
        android:id="@+id/container_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_confirm_password"
        >

      <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
          android:id="@+id/btn_registration"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:layout_marginTop="20dp"
          android:background="?colorAccent"
          android:text="@string/registration_btn_registrate"
          android:textColor="@color/colorWhite"
          android:textSize="14sp"
          app:finalCornerAngle="50dp"
          app:initialCornerAngle="0dp"
          app:spinning_bar_color="@color/colorWhite"
          app:spinning_bar_padding="10dp"
          app:spinning_bar_width="2dp"
          />

    </RelativeLayout>

  </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>

