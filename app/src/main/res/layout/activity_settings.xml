<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSettingsBackground"
    tools:context=".feature.settings.activities.SettingsActivity"
    >

  <!--top block-->
  <RelativeLayout
      android:id="@+id/top_block"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/colorSettingsBlockBackground"
      >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfile"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/hair33"
        app:civ_border_color="@color/colorWhite"
        app:civ_border_width="2dp"
        />
    <TextView
        android:id="@+id/btnChangePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivProfile"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:paddingTop="8dp"
        android:text="@string/change_photo"
        android:textColor="@color/colorSettingsChangePhotoText"
        />
    <View
        android:id="@+id/separator1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/btnChangePhoto"
        android:background="@color/colorSettingsSeparator"
        />
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separator1"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Василиса"
        android:textColor="@color/colorSettingsGeneralText"
        android:textSize="16sp"
        />
    <View
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tvName"
        android:background="@color/colorSettingsSeparator"
        />
  </RelativeLayout>

  <!--private information-->
  <TextView
      android:id="@+id/tvPrivateInformation"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_below="@+id/top_block"
      android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp"
      android:text="@string/private_information"
      android:textColor="@color/colorSettingsBlockHeaderText"
      android:layout_marginTop="16dp"
      android:layout_marginBottom="16dp"
      android:textSize="18sp"
      />
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:background="@color/colorSettingsBlockBackground"
      android:layout_below="@+id/tvPrivateInformation"
      >

  </RelativeLayout>


</RelativeLayout>
