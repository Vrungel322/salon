<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <RelativeLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:id="@+id/activity_settings"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/colorSettingsBackground"
      tools:context=".feature.settings.activities.SettingsActivity"
      >

    <!--top block-->
    <RelativeLayout
        android:id="@+id/block_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSettingsBlockBackground"
        android:visibility="visible"
        >

      <de.hdodenhof.circleimageview.CircleImageView
          android:id="@+id/ivProfile"
          android:layout_width="96dp"
          android:layout_height="96dp"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="32dp"
          android:src="@drawable/hair33"
          app:civ_border_color="@color/colorWhite"
          app:civ_border_width="2dp"
          />
      <TextView
          android:id="@+id/btnChangePhoto"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/ivProfile"
          android:layout_centerHorizontal="true"
          android:layout_marginBottom="16dp"
          android:paddingTop="8dp"
          android:text="@string/change_photo"
          android:textSize="16sp"
          android:textColor="@color/colorSettingsChangePhotoText"
          />
      <View
          android:id="@+id/separator1"
          android:layout_width="match_parent"
          android:layout_height="0.25dp"
          android:layout_below="@+id/btnChangePhoto"
          android:background="@color/colorSettingsSeparator"
          />
      <TextView
          android:id="@+id/tvName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/separator1"
          android:layout_marginBottom="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          android:drawableLeft="@drawable/ic_phone_white"
          android:drawablePadding="16dp"
          android:drawableStart="@drawable/ic_phone_white"
          android:text="Василиса"
          android:textColor="@color/colorSettingsGeneralText"
          android:textSize="16sp"
          />
      <View
          android:id="@+id/separator2"
          android:layout_width="match_parent"
          android:layout_height="0.25dp"
          android:layout_below="@+id/tvName"
          android:background="@color/colorSettingsSeparator"
          />
    </RelativeLayout>

    <!--private information-->
    <TextView
        android:id="@+id/tvPrivateInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/block_top"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/private_information"
        android:textColor="@color/colorSettingsBlockHeaderText"
        android:textSize="18sp"
        />
    <RelativeLayout
        android:id="@+id/block_private_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvPrivateInformation"
        android:background="@color/colorSettingsBlockBackground"
        >
      <View
          android:id="@+id/separator3"
          android:layout_width="match_parent"
          android:layout_height="0.25dp"
          android:background="@color/colorSettingsSeparator"
          />
      <TextView
          android:id="@+id/tvEmail"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          android:drawableLeft="@drawable/ic_phone_white"
          android:drawablePadding="16dp"
          android:drawableStart="@drawable/ic_phone_white"
          android:text="vasilisa.info@gmail.com"
          android:textColor="@color/colorSettingsGeneralText"
          android:textSize="16sp"
          />
      <View
          android:id="@+id/separator4"
          android:layout_width="match_parent"
          android:layout_height="0.25dp"
          android:layout_below="@+id/tvEmail"
          android:layout_marginLeft="50dp"
          android:background="@color/colorSettingsSeparator"
          />
      <TextView
          android:id="@+id/tvPhone"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/separator4"
          android:layout_marginBottom="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          android:drawableLeft="@drawable/ic_phone_white"
          android:drawablePadding="16dp"
          android:drawableStart="@drawable/ic_phone_white"
          android:text="+38 095 937 99 92"
          android:textColor="@color/colorSettingsGeneralText"
          android:textSize="16sp"
          />
      <View
          android:id="@+id/separator5"
          android:layout_width="match_parent"
          android:layout_height="0.25dp"
          android:layout_below="@+id/tvPhone"
          android:layout_marginLeft="50dp"
          android:background="@color/colorSettingsSeparator"
          />
      <TextView
          android:id="@+id/tvGender"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/separator5"
          android:layout_marginBottom="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          android:drawableLeft="@drawable/ic_phone_white"
          android:drawablePadding="16dp"
          android:drawableStart="@drawable/ic_phone_white"
          android:text="Женский"
          android:textColor="@color/colorSettingsGeneralText"
          android:textSize="16sp"
          />
      <View
          android:id="@+id/separator6"
          android:layout_width="match_parent"
          android:layout_height="0.25dp"
          android:layout_below="@+id/tvGender"
          android:background="@color/colorSettingsSeparator"
          />
    </RelativeLayout>

    <!--additional settings-->
    <TextView
        android:id="@+id/tvAdditionalSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/block_private_info"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/additional_settings"
        android:textColor="@color/colorSettingsBlockHeaderText"
        android:textSize="18sp"
        />
    <RelativeLayout
        android:id="@+id/block_additional_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvAdditionalSettings"
        android:background="@color/colorSettingsBlockBackground"
        >
      <View
          android:id="@+id/separator7"
          android:layout_width="match_parent"
          android:layout_height="0.25dp"
          android:background="@color/colorSettingsSeparator"
          />
      <TextView
          android:id="@+id/tvLanguage"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/separator7"
          android:layout_marginBottom="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          android:text="@string/language"
          android:textColor="@color/colorSettingsGeneralText"
          android:textSize="16sp"
          />
      <View
          android:id="@+id/separator8"
          android:layout_width="match_parent"
          android:layout_height="0.25dp"
          android:layout_below="@+id/tvLanguage"
          android:layout_marginLeft="50dp"
          android:background="@color/colorSettingsSeparator"
          />
      <TextView
          android:id="@+id/tvNotifications"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/separator8"
          android:layout_marginBottom="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          android:text="@string/settings_notifications"
          android:textColor="@color/colorSettingsGeneralText"
          android:textSize="16sp"
          />
      <View
          android:id="@+id/separator9"
          android:layout_width="match_parent"
          android:layout_height="0.25dp"
          android:layout_below="@+id/tvNotifications"
          android:background="@color/colorSettingsSeparator"
          />
    </RelativeLayout>

    <!--information-->

    <!--social networks-->

    <!--final block-->
    <TextView
        android:id="@+id/tvFinalSpace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/block_additional_settings"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text=" "
        android:textColor="@color/colorSettingsBlockHeaderText"
        android:textSize="18sp"
        />
    <RelativeLayout
        android:id="@+id/block_final"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvFinalSpace"
        android:layout_marginBottom="72dp"
        android:background="@color/colorSettingsBlockBackground"
        >
      <View
          android:id="@+id/separator10"
          android:layout_width="match_parent"
          android:layout_height="0.25dp"
          android:background="@color/colorSettingsSeparator"
          />
      <TextView
          android:id="@+id/tvClearHistory"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/separator10"
          android:layout_marginBottom="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          android:text="@string/clear_history"
          android:textColor="@color/colorSettingsFinalBlockText"
          android:textSize="16sp"
          />
      <View
          android:id="@+id/separator11"
          android:layout_width="match_parent"
          android:layout_height="0.25dp"
          android:layout_marginLeft="50dp"
          android:layout_below="@+id/tvClearHistory"
          android:background="@color/colorSettingsSeparator"
          />
      <TextView
          android:id="@+id/tvExit"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/separator11"
          android:layout_marginBottom="16dp"
          android:layout_marginLeft="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          android:text="@string/exit"
          android:textColor="@color/colorSettingsFinalBlockText"
          android:textSize="16sp"
          />
    </RelativeLayout>
  </RelativeLayout>
</android.support.v4.widget.NestedScrollView>