<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clParetn"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="12dp"
    android:layout_marginStart="12dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    >

  <ImageView
      android:id="@+id/ivMasterImg"
      android:layout_width="match_parent"
      android:layout_height="180dp"
      android:scaleType="centerCrop"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:background="@drawable/hair33"
      />
  <TextView
      android:id="@+id/tvMasterName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:layout_marginTop="8dp"
      android:text="TextView"
      android:textColor="@color/colorBlack"
      android:textSize="18dp"
      app:layout_constraintLeft_toLeftOf="@+id/ivMasterImg"
      app:layout_constraintTop_toBottomOf="@+id/ivMasterImg"
      />
  <TextView
      android:id="@+id/tvMasterDescription"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:layout_marginTop="8dp"
      android:ellipsize="end"
      android:lines="4"
      android:text="TextView"
      android:textColor="@color/colorLightGray"
      app:layout_constraintLeft_toLeftOf="@+id/ivMasterImg"
      app:layout_constraintTop_toBottomOf="@+id/tvMasterName"
      />
</android.support.constraint.ConstraintLayout>