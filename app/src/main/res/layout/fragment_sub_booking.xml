<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:clickable="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >
  <TextView
      android:id="@+id/tvMyBooks"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@color/colorWhite"
      android:paddingBottom="8dp"
      android:paddingLeft="8dp"
      android:paddingStart="8dp"
      android:paddingTop="8dp"
      android:text="@string/menu_my_booking"
      android:textColor="@color/colorLLightGray"
      android:textSize="20sp"
      />
  <TextView
      android:id="@+id/tvAllBooks"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBaseline="@+id/tvMyBooks"
      android:layout_alignBottom="@+id/tvMyBooks"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_marginEnd="16dp"
      android:layout_marginRight="16dp"
      android:background="?attr/selectableItemBackground"
      android:padding="5dp"
      android:text="@string/all_books"
      android:textAllCaps="true"
      android:textColor="@color/colorAccent"
      android:textSize="12sp"
      />
  <android.support.v7.widget.RecyclerView
      android:id="@+id/rvMyLastBooking"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tvMyBooks"
      />
</RelativeLayout>