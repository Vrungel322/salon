<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nsv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/colorLLightGray"
      android:clickable="true"
      >

    <android.support.v7.widget.CardView
        android:id="@+id/cvChooseMaster"
        android:layout_width="wrap_content"
      android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        >
      <RelativeLayout
          android:id="@+id/clChooseMaser"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:layout_marginTop="8dp"
          android:background="?attr/selectableItemBackground"
          >

        <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
            android:id="@+id/ivMaser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:src="@drawable/choose_master"
            />

        <TextView
            android:id="@+id/tvChooseMaser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ivMaser"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/book_choose_specialist"
            android:textColor="@color/colorGray"
            android:textSize="18sp"
            />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tvChooseMaser"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:rotation="-90"
            app:srcCompat="@drawable/ic_arrow_down"
            />
      </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cvChooseService"
        android:layout_width="wrap_content"
      android:layout_height="wrap_content"
        android:layout_below="@id/cvChooseMaster"
        app:cardUseCompatPadding="true"
        >
      <RelativeLayout
          android:id="@+id/clChooseService"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:layout_marginTop="8dp"
          android:background="?attr/selectableItemBackground"
          >

        <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
            android:id="@+id/ivService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/choose_service"
            />

        <TextView
            android:id="@+id/tvChooseService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ivService"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/book_choose_service"
            android:textColor="@color/colorGray"
            android:textSize="18sp"
            />
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tvChooseService"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:rotation="-90"
            app:srcCompat="@drawable/ic_arrow_down"
            />
      </RelativeLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
      android:id="@+id/rlNetworkDisconnection"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/colorLLightGray"
      android:padding="16dp"
      android:layout_centerVertical="true"
      android:visibility="gone">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorAccent"
        >

        <ImageView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:alpha="0.5"
          android:scaleType="centerCrop"
          app:srcCompat="@drawable/bonus_pattern" />

        <TextView
          android:id="@+id/textView7"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true"
          android:layout_marginEnd="8dp"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:layout_marginStart="8dp"
          android:layout_marginTop="32dp"
          android:gravity="center"
          android:text="@string/booking_network_disconnect"
          android:textColor="@color/colorWhite"
          android:textSize="18sp"
          />

        <TextView
          android:id="@+id/textView8"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/textView7"
          android:layout_centerHorizontal="true"
          android:layout_marginEnd="8dp"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:layout_marginStart="8dp"
          android:layout_marginTop="8dp"
          android:gravity="center"
          android:text="@string/booking_network_disconnect_message"
          android:textColor="@color/colorWhite"
          android:textSize="16sp"
          />

        <Button
          android:id="@+id/buttonBookingPhone"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/textView8"
          android:layout_centerHorizontal="true"
          android:layout_marginBottom="8dp"
          android:layout_marginTop="16dp"
          android:background="@color/colorTTransparentBlack"
          android:drawableLeft="@drawable/ic_phone_white"
          android:drawablePadding="5dp"
          android:drawableStart="@drawable/ic_phone_white"
          android:paddingLeft="16dp"
          android:paddingRight="16dp"
          android:text="@string/booking_network_disconnect_phones"
          android:textColor="@color/colorWhite"
          android:textSize="18sp"
          />
      </RelativeLayout>
    </RelativeLayout>
  </RelativeLayout>
</android.support.v4.widget.NestedScrollView>