<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLLightGray"
    android:orientation="vertical"
    >

  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/rl_choose_service"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginTop="4dp"
      android:background="@color/colorWhite"
      android:orientation="vertical"
      android:visibility="visible"
      >
    <TextView
        android:id="@+id/tv_service"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingEnd="14dp"
        android:paddingLeft="14dp"
        android:paddingStart="14dp"
        android:text="@string/book_choose_service"
        android:textColor="@color/colorTransparentBlack"
        android:textSize="16sp"
        />
    <ImageView
        android:id="@+id/iv_next1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:contentDescription="@string/book_choose_service"
        app:srcCompat="@drawable/ic_date_next_24dp"
        />
  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/rl_choose_specialist"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginTop="4dp"
      android:background="@color/colorWhite"
      android:orientation="vertical"
      >
    <TextView
        android:id="@+id/tv_specialist"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingEnd="14dp"
        android:paddingLeft="14dp"
        android:paddingStart="14dp"
        android:text="@string/book_choose_specialist"
        android:textColor="@color/colorTransparentBlack"
        android:textSize="16sp"
        />
    <ImageView
        android:id="@+id/iv_next2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:contentDescription="@string/book_choose_specialist"
        app:srcCompat="@drawable/ic_date_next_24dp"
        />
  </RelativeLayout>

</LinearLayout>