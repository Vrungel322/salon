<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorSettingsBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <TextView
      android:id="@+id/tvProblemDescription"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:textSize="17sp"
      android:textColor="@color/colorSettingsReportProblemText"
      android:text="@string/report_problem_description"
      />
  <EditText
      android:id="@+id/etProblem"
      android:layout_width="match_parent"
      android:layout_height="300dp"
      android:layout_below="@+id/tvProblemDescription"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="24dp"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:inputType="textMultiLine"
      android:scrollbars="vertical"
      android:padding="10dp"
      android:ems="10"
      android:gravity="top|left"
      android:hint="@string/report_problem_hint"
      android:textColorHint="@color/colorSettingsReportProblemHint"
      android:background="@color/colorSettingsReportProblemBackground"
      />
  <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
      android:id="@+id/btnSendProblem"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/colorSettingsReportProblemButton"
      android:layout_centerHorizontal="true"
      app:spinning_bar_padding="10dp"
      app:spinning_bar_color="@color/colorSettingsReportProblemButtonText"
      app:spinning_bar_width="2dp"
      app:initialCornerAngle="0dp"
      app:finalCornerAngle="50dp"
      android:textSize="14sp"
      android:text="@string/report_problem_button"
      android:textColor="@color/colorSettingsReportProblemButtonText"
      android:layout_below="@+id/etProblem"
      android:layout_marginTop="45dp"
      android:layout_marginLeft="24dp"
      android:layout_marginRight="24dp"
      />
</RelativeLayout>