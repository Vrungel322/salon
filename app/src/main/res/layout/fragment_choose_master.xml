<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    >

  <android.support.v4.widget.NestedScrollView
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginBottom="8dp"
      android:layout_marginLeft="0dp"
      android:layout_marginRight="0dp"
      android:layout_marginTop="0dp"
      android:visibility="invisible"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:id="@+id/nestedScrollChooseMaster"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical"
        >


      <android.support.constraint.ConstraintLayout
          android:id="@+id/constraintLayout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:background="@color/colorBookingInfoBackground"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          >

        <TextView
            android:id="@+id/tv_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/booking_service"
            android:textColor="@color/colorBookingInfoTitleService"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tvServiceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:text="Стрижка модельная"
            android:textColor="@color/colorBookingInfoDescriptionService"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_service"
            app:layout_constraintTop_toTopOf="@+id/tv_service"
            />
        <View
            android:id="@+id/separator"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorGrayTransparent"
            app:layout_constraintLeft_toLeftOf="@+id/tvServiceName"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvServiceName"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/booking_time"
            android:textColor="@color/colorBookingInfoTitleTime"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separator"
            />
        <TextView
            android:id="@+id/tvServiceTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28.02.2017 в 17:00"
            android:textColor="@color/colorBookingInfoDescriptionTime"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="@+id/tvServiceName"
            app:layout_constraintTop_toTopOf="@+id/tv_time"
            />
        <ImageView
            android:id="@+id/iv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintLeft_toLeftOf="@+id/tvServiceTime"
            app:layout_constraintTop_toBottomOf="@+id/tvServiceTime"
            app:srcCompat="@drawable/ic_work_time_14dp"
            />
        <TextView
            android:id="@+id/tvServiceDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:text="40 мин"
            android:textSize="12sp"
            android:textColor="@color/colorBookingInfoDetailsTime"
            app:layout_constraintBottom_toBottomOf="@+id/iv_time"
            app:layout_constraintLeft_toRightOf="@+id/iv_time"
            app:layout_constraintTop_toTopOf="@+id/iv_time"
            />
        <View
            android:id="@+id/space"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:background="@color/colorTransparent"
            app:layout_constraintTop_toBottomOf="@+id/iv_time"
            tools:layout_editor_absoluteX="0dp"
            />

      </android.support.constraint.ConstraintLayout>
      <View
          android:id="@+id/view2"
          android:layout_width="match_parent"
          android:layout_height="8dp"
          android:layout_marginTop="8dp"
          android:background="@color/colorLLLLightGray"
          app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
          tools:layout_editor_absoluteX="0dp"
          />
      <TextView
          android:id="@+id/textView4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="8dp"
          android:text="@string/choose_master"
          android:textColor="@color/colorAccent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/view2"
          />
      <CheckBox
          android:id="@+id/cbAnyMaster"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="8dp"
          android:text="@string/any_master"
          android:textColor="@color/colorBlack"
          android:textSize="12sp"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textView4"
          />
      <android.support.v7.widget.RecyclerView
          android:id="@+id/rvMasters"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginBottom="0dp"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:layout_marginTop="0dp"
          android:background="@color/colorLLLLightGray"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/cbAnyMaster"
          app:layout_constraintVertical_bias="0.0"
          />
    </LinearLayout>
  </android.support.v4.widget.NestedScrollView>
  <ProgressBar
      android:id="@+id/progressBarChooseMaster"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      style="?android:attr/progressBarStyle"
      android:layout_marginRight="8dp"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginLeft="8dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginBottom="8dp"
      />
</android.support.constraint.ConstraintLayout>