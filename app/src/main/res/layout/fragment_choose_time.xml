<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    >
  <android.support.v4.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

      <LinearLayout
          android:id="@+id/linearLayout2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:background="@color/colorLightPink"
          android:orientation="horizontal"
          android:padding="18dp"
          >
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/service"
            android:textColor="@color/colorGray"
            />
        <TextView
            android:id="@+id/tvServiceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="18"
            android:textColor="@color/colorBlack"
            android:text="TextView"
            />
      </LinearLayout>
      <RelativeLayout
          android:id="@+id/relativeLayout"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_marginBottom="16dp"
          android:layout_marginEnd="12dp"
          android:layout_marginLeft="12dp"
          android:layout_marginRight="12dp"
          android:layout_marginStart="12dp"
          android:layout_marginTop="16dp"
          android:background="@color/colorLLLLightGray"
          >

        <ImageView
            android:id="@+id/bPrevDay"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/bNextDay"
            android:layout_alignBottom="@+id/bNextDay"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_action_chevron_left"
            app:layout_constraintBottom_toBottomOf="@+id/vpDatesOfMonth"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/vpDatesOfMonth"
            />
        <ImageView
            android:id="@+id/bNextDay"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_chevron_right"
            app:layout_constraintBottom_toBottomOf="@+id/vpDatesOfMonth"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/vpDatesOfMonth"
            />
        <com.apps.twelve.floor.salon.ui.customViews.ViewPagerWithoutSwipe
            android:id="@+id/vpDatesOfMonth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toRightOf="@+id/bPrevDay"
            app:layout_constraintRight_toLeftOf="@+id/bNextDay"
            />
      </RelativeLayout>
      <LinearLayout
          android:id="@+id/linearLayout5"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/colorLLLLightGray"
          android:orientation="vertical"
          android:padding="12dp"
          >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvDates"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:orientation="horizontal"
            >
          <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="3"
              android:gravity="right"
              android:text="Свободное время на:"
              />
          <TextView
              android:id="@+id/tvDateInText"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="8dp"
              android:layout_weight="2"
              android:gravity="left"
              android:text="27 марта"
              />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvScheduleInDay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            />

      </LinearLayout>
    </LinearLayout>
  </android.support.v4.widget.NestedScrollView>
</LinearLayout>