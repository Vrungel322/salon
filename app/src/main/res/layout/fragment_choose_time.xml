<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    >
  <android.support.v4.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

      <RelativeLayout
          android:id="@+id/linearLayout2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:background="@color/colorLightPink"
          android:padding="16dp"
          >
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/service"
            android:textColor="@color/colorGray"
            />
        <TextView
            android:id="@+id/tvServiceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/textView6"
            android:layout_toRightOf="@+id/textView6"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/colorBlack"
            />
      </RelativeLayout>
      <RelativeLayout
          android:id="@+id/relativeLayout"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_margin="16dp"
          android:background="@color/colorLLLLightGray"
          >

        <ImageView
            android:id="@+id/bPrevDay"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_action_chevron_left"
            />
        <ImageView
            android:id="@+id/bNextDay"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_action_chevron_right"
            />
        <com.apps.twelve.floor.salon.ui.customViews.ViewPagerWithoutSwipe
            android:id="@+id/vpDatesOfMonth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
      </RelativeLayout>
      <LinearLayout
          android:id="@+id/linearLayoutTime"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/colorLLLLightGray"
          android:orientation="vertical"
          android:padding="16dp"
          >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvDates"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            >
          <TextView
              android:id="@+id/textView4"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ellipsize="end"
              android:lines="1"
              android:text="@string/spare_time"
              />
          <TextView
              android:id="@+id/tvDateInText"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="8dp"
              android:layout_marginStart="8dp"
              android:layout_toEndOf="@+id/textView4"
              android:layout_toRightOf="@+id/textView4"
              android:ellipsize="end"
              android:lines="1"
              android:textColor="@color/colorDarkPink"
              />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvScheduleInDay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

      </LinearLayout>
    </LinearLayout>
  </android.support.v4.widget.NestedScrollView>
</LinearLayout>