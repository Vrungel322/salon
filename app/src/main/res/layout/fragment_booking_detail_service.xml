<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLLightGray"
    android:clickable="true"
    android:orientation="vertical"
    >
  <LinearLayout
      android:id="@+id/linearLayout3"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:baselineAligned="false"
      android:orientation="horizontal"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      >
    <LinearLayout
        android:id="@+id/tabService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:orientation="vertical"
        >
      <TextView
          android:id="@+id/textAccentService"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="3dp"
          android:gravity="center_horizontal"
          android:text="@string/tab_services"
          android:textSize="13sp"
          />
      <View
          android:id="@+id/viewAccentService"
          android:layout_width="match_parent"
          android:layout_height="5dp"
          android:background="?colorAccent"
          />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tabTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:orientation="vertical"
        >
      <TextView
          android:id="@+id/textAccentTime"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="3dp"
          android:gravity="center_horizontal"
          android:text="@string/tab_time"
          android:textSize="13sp"
          />
      <View
          android:id="@+id/viewAccentTime"
          android:layout_width="match_parent"
          android:layout_height="5dp"
          android:background="?colorAccent"
          android:visibility="invisible"
          />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tabMaster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:orientation="vertical"
        >
      <TextView
          android:id="@+id/textAccentMaster"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="3dp"
          android:gravity="center_horizontal"
          android:text="@string/tab_master"
          android:textSize="13sp"
          />
      <View
          android:id="@+id/viewAccentMaster"
          android:layout_width="match_parent"
          android:layout_height="5dp"
          android:background="?colorAccent"
          android:visibility="invisible"
          />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tabData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:orientation="vertical"
        >
      <TextView
          android:id="@+id/textAccentData"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="3dp"
          android:gravity="center_horizontal"
          android:text="@string/tab_data"
          android:textSize="13sp"
          />
      <View
          android:id="@+id/viewAccentData"
          android:layout_width="match_parent"
          android:layout_height="5dp"
          android:background="?colorAccent"
          android:visibility="invisible"
          />
    </LinearLayout>
  </LinearLayout>
  <FrameLayout
      android:id="@+id/container_booking_detail_service"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
      />

</android.support.constraint.ConstraintLayout>