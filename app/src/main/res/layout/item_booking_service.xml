<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    >

  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/ivServiceImg"
      android:layout_width="64dp"
      android:layout_height="0dp"
      android:layout_marginBottom="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:scaleType="centerCrop"
      app:civ_border_color="?colorAccent"
      app:civ_border_width="1dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0"
      />
  <TextView
      android:id="@+id/tvServiceName"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="4dp"
      android:ellipsize="end"
      android:maxLines="2"
      android:textColor="@color/colorGray"
      android:textSize="16sp"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintLeft_toRightOf="@+id/ivServiceImg"
      app:layout_constraintRight_toLeftOf="@+id/guideline"
      app:layout_constraintTop_toTopOf="@+id/ivServiceImg"
      />
  <ImageView
      android:id="@+id/ivServiceBadgeNew"
      android:layout_width="25dp"
      android:layout_height="25dp"
      android:layout_marginRight="1dp"
      android:layout_marginTop="4dp"
      app:layout_constraintRight_toLeftOf="@+id/tvServiceName"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/alerter_ic_face"
      />
  <TextView
      android:id="@+id/tvAboutService"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:ellipsize="end"
      android:maxLines="2"
      android:textColor="@color/colorTransparentBlack"
      android:textSize="12sp"
      android:layout_marginTop="16dp"
      app:layout_constraintTop_toBottomOf="@+id/tvServiceName"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginBottom="8dp"
      app:layout_constraintVertical_bias="0.0"
      app:layout_constraintLeft_toRightOf="@+id/ivServiceImg"
      android:layout_marginLeft="8dp"
      />
  <android.support.constraint.Guideline
      android:id="@+id/guideline"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.67"
      />
  <android.support.constraint.ConstraintLayout
      android:id="@+id/clInfo"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="@+id/guideline"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      >
    <TextView
        android:id="@+id/tvServicePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:ellipsize="end"
        android:textColor="@color/colorGray"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/ivServiceBadgeSale"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="4dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toLeftOf="@+id/tvServicePrice"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/alerter_ic_face"
        />
    <ImageView
        android:id="@+id/iv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvServiceDuration"
        app:layout_constraintRight_toLeftOf="@+id/tvServiceDuration"
        app:layout_constraintTop_toTopOf="@+id/tvServiceDuration"
        app:srcCompat="@drawable/ic_work_time_14dp"
        />
    <TextView
        android:id="@+id/tvServiceDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/colorTransparentBlack"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="@+id/tvServicePrice"
        app:layout_constraintTop_toBottomOf="@+id/tvServicePrice"
        />
    <ImageView
        android:id="@+id/ivBonusPrice"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_toLeftOf="@+id/tvPriceBonus"
        android:layout_toStartOf="@+id/tvPriceBonus"
        app:layout_constraintBottom_toBottomOf="@+id/tvPriceBonus"
        app:layout_constraintRight_toLeftOf="@+id/tvPriceBonus"
        app:layout_constraintTop_toTopOf="@+id/tvPriceBonus"
        app:srcCompat="@drawable/ic_bonus_24dp"
        />
    <TextView
        android:id="@+id/tvPriceBonus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:layout_marginTop="4dp"
        android:textColor="?colorAccent"
        app:layout_constraintRight_toRightOf="@+id/tvServicePrice"
        app:layout_constraintTop_toBottomOf="@+id/iv_duration"
        tools:text="100"
        />
  </android.support.constraint.ConstraintLayout>
  <ImageView
      android:id="@+id/imageView5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toRightOf="@+id/tvAboutService"
      android:layout_marginLeft="8dp"
      app:layout_constraintTop_toTopOf="@+id/tvAboutService"
      android:layout_marginTop="8dp"
      app:layout_constraintBottom_toBottomOf="@+id/tvAboutService"
      android:layout_marginBottom="8dp"
      android:rotation="-90"
      android:visibility="gone"
      app:srcCompat="@drawable/bsp_animated_arrow_drop_down"
      />

</android.support.constraint.ConstraintLayout>