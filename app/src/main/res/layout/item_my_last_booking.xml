<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clLastBooking"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:animateLayoutChanges="true"
    >

  <TextView
      android:id="@+id/view"
      android:layout_width="4dp"
      android:layout_height="0dp"
      android:background="@color/colorMainScreenBookingLeftLine"
      android:visibility="invisible"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:layout_constraintBottom_creator="1"
      tools:layout_constraintTop_creator="1"
      />
  <ImageView
      android:id="@+id/ivServicePhoto"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_marginBottom="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toRightOf="@+id/view"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@mipmap/ic_launcher"
      />
  <TextView
      android:id="@+id/tvServiceName"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:ellipsize="end"
      android:maxLines="2"
      android:textColor="@color/colorMainScreenBookingName"
      android:textSize="16sp"
      app:layout_constraintLeft_toRightOf="@+id/ivServicePhoto"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="Парикмахер"
      android:layout_marginRight="8dp"
      android:layout_marginEnd="8dp"
      app:layout_constraintRight_toRightOf="parent"
      />
  <TextView
      android:id="@+id/tvServiceTime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:textColor="@color/colorMainScreenBookingDate"
      android:textSize="12sp"
      app:layout_constraintLeft_toRightOf="@+id/ivServicePhoto"
      app:layout_constraintTop_toBottomOf="@+id/tvServiceName"
      tools:text="14.02.2017 at 17:00"
      />
  <Button
      android:id="@+id/tvRemainTime"
      android:layout_width="wrap_content"
      android:layout_height="15dp"
      android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp"
      android:drawableLeft="@drawable/ic_clock_red"
      android:drawableStart="@drawable/ic_clock_red"
      android:textAllCaps="false"
      android:ellipsize="end"
      android:gravity="start"
      android:drawablePadding="3dp"
      android:layout_marginTop="8dp"
      android:background="@color/colorTransparent"
      android:textColor="@color/colorMainScreenBookingDuration"
      android:textSize="12sp"
      app:layout_constraintLeft_toRightOf="@+id/tvServiceTime"
      app:layout_constraintTop_toBottomOf="@+id/tvServiceName"
      tools:text="1 h 50 min"
      />
  <Button
      android:id="@+id/bPostpone"
      android:layout_width="wrap_content"
      android:layout_height="25dp"
      android:background="?attr/selectableItemBackground"
      android:drawableLeft="@drawable/ic_recall"
      android:drawableStart="@drawable/ic_recall"
      android:paddingBottom="3dp"
      android:paddingEnd="3dp"
      android:paddingRight="3dp"
      android:paddingTop="3dp"
      android:text="@string/postpone"
      android:textAllCaps="false"
      android:textColor="@color/colorMainScreenBookingRecall"
      android:textSize="12sp"
      app:layout_constraintBottom_toBottomOf="@+id/ivServicePhoto"
      app:layout_constraintLeft_toRightOf="@+id/ivServicePhoto"
      />
  <Button
      android:id="@+id/bCancel"
      android:layout_width="wrap_content"
      android:layout_height="25dp"
      android:layout_marginEnd="16dp"
      android:layout_marginRight="16dp"
      android:paddingBottom="3dp"
      android:paddingEnd="3dp"
      android:paddingRight="3dp"
      android:paddingTop="3dp"
      android:background="?attr/selectableItemBackground"
      android:drawableLeft="@drawable/ic_cancel"
      android:drawableStart="@drawable/ic_cancel"
      android:text="@string/cancel"
      android:textAllCaps="false"
      android:textColor="@color/colorMainScreenBookingCancel"
      android:textSize="12sp"
      app:layout_constraintBottom_toBottomOf="@+id/bPostpone"
      app:layout_constraintHorizontal_bias="0.25"
      app:layout_constraintLeft_toRightOf="@+id/bPostpone"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginBottom="0dp"
      />

</android.support.constraint.ConstraintLayout>