<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clLastBooking"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    >

  <TextView
      android:id="@+id/view"
      android:layout_width="8dp"
      android:layout_height="0dp"
      android:background="@android:color/holo_red_light"
      android:visibility="invisible"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />
  <ImageView
      android:id="@+id/ivServicePhoto"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      app:layout_constraintLeft_toRightOf="@+id/view"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ic_face"
      />
  <TextView
      android:id="@+id/tvServiceName"
      android:layout_width="171dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:ellipsize="end"
      android:maxLines="2"
      android:textColor="@color/colorDescriptionBooking"
      android:textSize="18sp"
      app:layout_constraintLeft_toRightOf="@+id/ivServicePhoto"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="Strizhka i melivanie"
      />
  <TextView
      android:id="@+id/tvServiceTime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:textColor="@color/colorBookingDate"
      android:textSize="12sp"
      app:layout_constraintLeft_toRightOf="@+id/ivServicePhoto"
      app:layout_constraintTop_toBottomOf="@+id/tvServiceName"
      tools:text="14.02.2017 at 17:00"
      />
  <TextView
      android:id="@+id/tvRemainTime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:textColor="@android:color/holo_red_light"
      android:textSize="12sp"
      app:layout_constraintLeft_toRightOf="@+id/tvServiceTime"
      app:layout_constraintTop_toBottomOf="@+id/tvServiceName"
      tools:text="1 hour 50 min"
      />
  <Button
      android:id="@+id/bPostpone"
      android:layout_width="wrap_content"
      android:layout_height="48dp"
      android:layout_marginTop="8dp"
      android:background="?attr/selectableItemBackground"
      android:drawableLeft="@android:drawable/ic_menu_rotate"
      android:drawableStart="@android:drawable/ic_menu_rotate"
      android:text="@string/postpone"
      android:textAllCaps="false"
      android:textColor="@color/colorBookingDate"
      android:textSize="12sp"
      app:layout_constraintLeft_toRightOf="@+id/ivServicePhoto"
      app:layout_constraintTop_toBottomOf="@+id/tvServiceTime"
      />
  <Button
      android:id="@+id/bCancel"
      android:layout_width="wrap_content"
      android:layout_height="48dp"
      android:layout_marginEnd="16dp"
      android:layout_marginRight="16dp"
      android:layout_marginTop="8dp"
      android:background="?attr/selectableItemBackground"
      android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
      android:drawableStart="@android:drawable/ic_menu_close_clear_cancel"
      android:text="@string/cancel"
      android:textAllCaps="false"
      android:textColor="@color/colorBookingDate"
      android:textSize="12sp"
      app:layout_constraintHorizontal_bias="0.19"
      app:layout_constraintLeft_toRightOf="@+id/bPostpone"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvRemainTime"
      />

</android.support.constraint.ConstraintLayout>