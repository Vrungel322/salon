<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    >
  <android.support.v4.widget.NestedScrollView
      android:id="@+id/nestedScrollBookingTime"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:visibility="visible"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

      <android.support.constraint.ConstraintLayout
          android:id="@+id/constraintLayout"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="16dp"
          android:background="@color/colorLLightPink"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          >

        <TextView
            android:id="@+id/tv_master"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/booking_master"
            android:textColor="@color/colorBookingInfoTitleMaster"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tv_master_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:text="Никос Василий"
            android:textColor="@color/colorBookingInfoDescriptionMaster"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_master"
            app:layout_constraintTop_toTopOf="@+id/tv_master"
            />
        <TextView
            android:id="@+id/tv_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/booking_service"
            android:textColor="@color/colorBookingInfoTitleService"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_master"
            />
        <TextView
            android:id="@+id/tv_service_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Стрижка"
            android:textColor="@color/colorBookingInfoDescriptionService"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_master_description"
            app:layout_constraintTop_toTopOf="@+id/tv_service"
            />
        <View
            android:id="@+id/space"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:background="@color/colorTransparent"
            tools:layout_editor_absoluteX="0dp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_service"
            />

      </android.support.constraint.ConstraintLayout>
      <RelativeLayout
          android:id="@+id/relativeLayout"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_margin="16dp"
          android:background="@color/colorLLLLightGray"
          >

        <TextView
            android:id="@+id/textViewCurrentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Текущая дата"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/bPrevDay"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_action_chevron_left"
            />
        <ImageView
            android:id="@+id/bNextDay"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_action_chevron_right"
            />
        <com.apps.twelve.floor.salon.ui.customViews.ViewPagerWithoutSwipe
            android:id="@+id/vpDatesOfMonth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
      </RelativeLayout>
      <RelativeLayout
          android:id="@+id/relativeLayoutNotTime"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/colorGray"
          android:padding="16dp"
          android:visibility="gone"
          >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorDarkPink"
            >

          <TextView
              android:id="@+id/textView7"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentTop="true"
              android:layout_centerHorizontal="true"
              android:layout_marginEnd="8dp"
              android:layout_marginLeft="8dp"
              android:layout_marginRight="8dp"
              android:layout_marginStart="8dp"
              android:layout_marginTop="32dp"
              android:gravity="center"
              android:text="@string/time_empty"
              android:textColor="@color/colorWhite"
              />
          <TextView
              android:id="@+id/textView8"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/textView7"
              android:layout_centerHorizontal="true"
              android:layout_marginEnd="8dp"
              android:layout_marginLeft="8dp"
              android:layout_marginRight="8dp"
              android:layout_marginStart="8dp"
              android:layout_marginTop="16dp"
              android:gravity="center"
              android:text="@string/booking_phone"
              android:textColor="@color/colorWhite"
              />
          <Button
              android:id="@+id/buttonBookingPhone"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/textView8"
              android:layout_centerHorizontal="true"
              android:layout_marginBottom="16dp"
              android:layout_marginTop="16dp"
              android:drawableLeft="@drawable/ic_action_call"
              android:drawablePadding="5dp"
              android:drawableStart="@drawable/ic_action_call"
              android:text="80996753872"
              android:textColor="@color/colorWhite"
              />
        </RelativeLayout>
      </RelativeLayout>
      <LinearLayout
          android:id="@+id/linearLayoutTime"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/colorLLLLightGray"
          android:orientation="vertical"
          android:padding="16dp"
          android:visibility="gone"
          >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvDates"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            >
          <TextView
              android:id="@+id/textView4"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ellipsize="end"
              android:lines="1"
              android:text="@string/spare_time"
              />
          <TextView
              android:id="@+id/tvDateInText"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="8dp"
              android:layout_marginStart="8dp"
              android:layout_toEndOf="@+id/textView4"
              android:layout_toRightOf="@+id/textView4"
              android:ellipsize="end"
              android:lines="1"
              android:textColor="@color/colorDarkPink"
              />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvScheduleInDay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

      </LinearLayout>
    </LinearLayout>
  </android.support.v4.widget.NestedScrollView>
  <ProgressBar
      android:id="@+id/progressBarBookingTime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      style="?android:attr/progressBarStyle"
      />
</RelativeLayout>