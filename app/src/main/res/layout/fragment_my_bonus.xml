<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite"
    android:clickable="true"
    >
  <TextView
      android:id="@+id/tvTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      tools:text="Ваши бонусы:"
      android:textColor="@color/colorLightGray"
      android:textSize="20sp"
      android:layout_marginLeft="8dp"
      android:layout_marginTop="8dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginStart="8dp"
      />
  <TextView
      android:id="@+id/tvCountBonus"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:textSize="72sp"
      android:textColor="?colorAccent"
      tools:text="100"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintHorizontal_bias="0.502"
      android:layout_marginTop="16dp"
      app:layout_constraintTop_toBottomOf="@+id/tvTitle"
      />
  <Button
      android:id="@+id/btnHowBonusWorks"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginTop="16dp"
      android:background="?colorAccent"
      android:textColor="@color/colorWhite"
      android:text="@string/bonus_how_works"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvCountBonus"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      />
  <TextView
      android:id="@+id/tvYourTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/promo_your"
      android:textColor="@color/colorBlack"
      android:textSize="20sp"
      android:layout_marginTop="24dp"
      app:layout_constraintTop_toBottomOf="@+id/btnHowBonusWorks"
      android:layout_marginLeft="8dp"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginStart="8dp"
      />
  <TextView
      android:id="@+id/tvYourDescr"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginTop="4dp"
      android:lines="2"
      android:text="@string/promo_your_descr"
      android:textColor="@color/colorLightGray"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvYourTitle"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      />
  <EditText
      android:id="@+id/etYour"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:ems="10"
      tools:text="000"
      android:gravity="center"
      android:textSize="14sp"
      android:paddingTop="8dp"
      android:paddingBottom="8dp"
      android:background="@color/colorLLightGray"
      android:layout_marginLeft="8dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="@+id/btnSendCode"
      app:layout_constraintBottom_toBottomOf="@+id/btnSendCode"
      app:layout_constraintRight_toLeftOf="@+id/btnSendCode"
      android:layout_marginRight="8dp"
      android:layout_marginEnd="8dp"
      app:layout_constraintVertical_bias="0.50"
      android:layout_marginStart="8dp"
      />
  <Button
      android:id="@+id/btnSendCode"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/promo_send"
      android:textColor="@color/colorWhite"
      android:textSize="12sp"
      android:background="?colorAccent"
      android:paddingLeft="8dp"
      android:paddingRight="8dp"
      android:layout_marginTop="8dp"
      app:layout_constraintTop_toBottomOf="@+id/tvYourDescr"
      android:layout_marginRight="8dp"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginEnd="8dp"
      />
  <TextView
      android:id="@+id/tvFriendTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/promo_friend"
      android:textColor="@color/colorBlack"
      android:textSize="20sp"
      android:layout_marginTop="24dp"
      app:layout_constraintTop_toBottomOf="@+id/etYour"
      android:layout_marginLeft="8dp"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginStart="8dp"
      />
  <TextView
      android:id="@+id/tvFriendDescr"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginTop="4dp"
      android:lines="2"
      android:text="@string/promo_friend_descr"
      android:textColor="@color/colorLightGray"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvFriendTitle"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      />
  <EditText
      android:id="@+id/etFriend"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:ems="10"
      android:hint="@string/promo_fill"
      android:gravity="center"
      android:textSize="14sp"
      android:paddingTop="8dp"
      android:paddingBottom="8dp"
      android:background="@color/colorLLightGray"
      android:layout_marginLeft="8dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvFriendDescr"
      android:layout_marginRight="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      app:layout_constraintHorizontal_bias="0.0"
      />

</android.support.constraint.ConstraintLayout>